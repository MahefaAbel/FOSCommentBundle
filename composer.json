{
    "name": "mahefa/comment-bundle",
    "type": "symfony-bundle",
    "description": "This Bundle provides threaded comment functionality for Symfony applications",
    "keywords": ["comment", "threads", "forum"],
    "homepage": "https://github.com/MahefaAbel/FOSCommentBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Nagel",
            "email": "tim@nagel.com.au"
        },
        {
            "name": "Alexander Mols",
            "email": "iam.asm89@gmail.com"
        },
        {
            "name": "FriendsOfSymfony Community",
            "homepage": "https://github.com/friendsofsymfony/FOSCommentBundle/contributors"
        },
        {
            "name": "Mahefa Abel",
            "email": "abelmahefa@gmail.com",
            "homepage": "https://mahefa.pro"
        }
    ],
    "support": {
        "issues": "https://github.com/FriendsOfSymfony/FOSCommentBundle/issues"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "friendsofsymfony/rest-bundle": "^3.3",
        "jms/serializer-bundle": "~2.0|~3.0",
        "symfony/framework-bundle": "~3.4|^4.3|^5|^6.0",
        "symfony/asset": "~3.4|^4.3|^5|^6.0",
        "symfony/dependency-injection": "~3.4|^4.3|^5|^6.0",
        "symfony/routing": "~3.4|^4.3|^5|^6.0",
        "symfony/security-bundle": "~3.4|^4.3|^5|^6.0",
        "symfony/yaml": "~3.4|^4.3|^5|^6.0",
        "symfony/form": "~3.4|^4.3|^5|^6.0",
        "symfony/validator": "~3.4|^4.3|^5|^6.0",
        "symfony/twig-bundle": "~3.4|^4.3|^5|^6.0",
        "symfony/twig-bridge": "~3.4|^4.3|^5|^6.0",
        "twig/twig": "~2.0|~3.0",
        "phpoption/phpoption": "^1.9", 
        "doctrine/annotations": "^1.13"
    },
    "suggest": {
        "friendsofsymfony/user-bundle": "Allows for user integration.",
        "ornicar/akismet-bundle": "Integrate Akismet for spam detection.",
        "symfony/acl-bundle": "Integrates the ACL Security component.",
        "symfony/assetic-bundle": "Integrates Assetic into Symfony."
    },
    "require-dev": {
        "symfony/browser-kit": "~3.4|^4.3|^5|^6.0",
        "symfony/dom-crawler": "~3.4|^4.3|^5|^6.0",
        "symfony/css-selector": "~3.4|^4.3|^5|^6.0",
        "doctrine/orm": "~2.3",
        "doctrine/doctrine-bundle": "^1.6|^2.0",
        "friendsofsymfony/user-bundle": "~2.0",
        "mahefa/akismet-bundle": "*",
        "symfony/expression-language": "~3.4|^4.3|^5|^6.0",
        "symfony/phpunit-bridge": "~3.4|^4.3|^5|^6.0",
        "phpunit/phpunit": "^6.5 | 9.*",
        "friendsofphp/php-cs-fixer": "^2.2 | 3.*"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "FOS\\CommentBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FOS\\CommentBundle\\Tests\\": "tests/"
        }
    },
    "prefer-stable": true
}
